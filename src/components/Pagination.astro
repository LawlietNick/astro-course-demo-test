---
type Props = {
    prevURL?: string;
    nextURL?: string;
}

const {prevURL, nextURL} = Astro.props;

---
<div class="flex justify-between">
{
    prevURL ? (
        <a 
            rel="prev"
            href={prevURL} 
            class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl" 
        >
            Previous
        </a>
    ) : ( 
        <div /> 
    )
}
{
    nextURL ? (
        <a 
            rel="next"
            href={nextURL} 
            class="bg-teal-900 text-white py-3 px-6 rounded-xl text-xl" 
        >
            Next
        </a>
    ) : ( 
        <div /> 
    )
}
</div>